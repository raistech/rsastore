# RSA Store - Environment Configuration
# Copy this file to .env and fill in your actual values

# =================================
# SERVER CONFIGURATION
# =================================
PORT=3000
NODE_ENV=production
BASE_URL=http://localhost:3000

# =================================
# SESSION SECRET
# =================================
# Generate a random string for session encryption
# Example: openssl rand -base64 32
SESSION_SECRET=your-random-secret-key-here

# =================================
# ADMIN CREDENTIALS
# =================================
# Default admin credentials for first login
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# =================================
# SMTP EMAIL CONFIGURATION
# =================================
# Email service for sending invoices
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM_NAME=RSA Store
SMTP_FROM_EMAIL=your-email@gmail.com

# =================================
# QRIS PAYMENT CONFIGURATION
# =================================
# QRIS Service URL (default: http://localhost:3001)
QRIS_SERVICE_URL=http://localhost:3001

# QRIS Base String (from your payment provider)
# This is the static QRIS string without amount
QRIS_BASE_STRING=00020101021126680016COM.NOBUBANK.WWW...

# =================================
# WEBHOOK CONFIGURATION
# =================================
# Webhook API Key for payment notifications
# Generate a random string for security
WEBHOOK_API_KEY=your-webhook-api-key-here

# =================================
# TELEGRAM BOT (Optional)
# =================================
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# =================================
# WHATSAPP BOT (Optional)
# =================================
# WhatsApp bot uses QR code authentication
# No configuration needed - scan QR in admin panel
WHATSAPP_ENABLED=false

# =================================
# RATE LIMITING
# =================================
# Requests per minute for general endpoints
RATE_LIMIT_GENERAL=100

# Requests per minute for checkout
RATE_LIMIT_CHECKOUT=10

# Requests per minute for webhook
RATE_LIMIT_WEBHOOK=100

# =================================
# FILE UPLOAD
# =================================
# Maximum file size in MB
MAX_FILE_SIZE=100

# Allowed file types (comma separated)
ALLOWED_FILE_TYPES=.pdf,.zip,.rar,.jpg,.png,.mp4,.mp3

# =================================
# DOWNLOAD TOKEN
# =================================
# Token expiry time in minutes
DOWNLOAD_TOKEN_EXPIRY=60

# =================================
# DATABASE
# =================================
# SQLite database file path (relative to project root)
DATABASE_PATH=./rsastore.db

# =================================
# LOGGING
# =================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log to file
LOG_TO_FILE=true

# =================================
# SECURITY
# =================================
# IP Whitelist (comma separated, optional)
# Example: 192.168.1.100,10.0.0.5
IP_WHITELIST=

# Enable CSRF protection
CSRF_ENABLED=true

# =================================
# NOTES
# =================================
# 1. Never commit the .env file to version control
# 2. Keep your secrets secure
# 3. Change default passwords immediately
# 4. Use strong random strings for SESSION_SECRET and WEBHOOK_API_KEY
# 5. For production, use HTTPS and secure SMTP settings
